        <div class="word-card synonym-card" data-word="permanent, lasting, forever, temporary">
            <h3 class="english-word">permanent / (Synonyms: lasting, forever) / (Antonym: temporary)</h3>
            <p class="arabic-translation">دائم (المرادف: lasting / forever، المضاد: temporary)</p>
            <button class="speak-btn" aria-label="النطق الصوتي"></button>
        </div>
        <div class="word-card synonym-card" data-word="scary, frightening, safe">
            <h3 class="english-word">scary / (Synonym: frightening) / (Antonym: safe)</h3>
            <p class="arabic-translation">مخيف (المرادف: frightening، المضاد: safe)</p>
            <button class="speak-btn" aria-label="النطق الصوتي"></button>
        </div>
        <div class="word-card synonym-card" data-word="adult, mature, grown-up, child, kid">
            <h3 class="english-word">adult / (Synonyms: mature, grown-up) / (Antonym: child, kid)</h3>
            <p class="arabic-translation">بالغ / راشد (المرادف: mature / grown-up، المضاد: child / kid)</p>
            <button class="speak-btn" aria-label="النطق الصوتي"></button>
        </div>
        
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.word-card');
            const speakBtns = document.querySelectorAll('.speak-btn');
            const playAllBtn = document.getElementById('play-all-btn');
            const stopBtn = document.getElementById('stop-btn');
            const speedRange = document.getElementById('speed-range');
            const speedValueSpan = document.getElementById('speed-value');
            const synth = window.speechSynthesis;
            let isReadingAll = false;
            let wordIndex = 0;
            let currentUtterance = null;
            let readingSpeed = parseFloat(speedRange.value);

            // Function to handle speaking the text
            const speakText = (text, speed, callback) => {
                if (synth.speaking) {
                    synth.cancel();
                }

                currentUtterance = new SpeechSynthesisUtterance(text);
                currentUtterance.lang = 'en-US'; // English language for pronunciation
                currentUtterance.rate = speed;
                
                currentUtterance.onend = () => {
                    if (callback) {
                        callback();
                    }
                };

                currentUtterance.onerror = (event) => {
                    console.error('SpeechSynthesis Utterance Error:', event.error);
                };

                synth.speak(currentUtterance);
            };

            // --- Core Speaking Function for Individual Card or Sequence ---
            const speakWordOrWords = (card, speed, sequenceCallback) => {
                const fullText = card.getAttribute('data-word');
                // Split by comma for sequential reading (used for verbs and synonyms/antonyms)
                const wordsToSpeak = fullText.split(',').map(word => word.trim()).filter(word => word.length > 0);
                let wordPartIndex = 0;
                
                const speakNextPart = () => {
                    if (wordPartIndex >= wordsToSpeak.length) {
                        // Finished reading all parts
                        if (sequenceCallback) {
                            sequenceCallback();
                        } else {
                            // Single word reading finished
                            card.classList.remove('active-reading');
                        }
                        return;
                    }

                    const part = wordsToSpeak[wordPartIndex];
                    
                    // Small local callback to proceed to the next part after current part finishes
                    speakText(part, speed, () => {
                        wordPartIndex++;
                        // Add a small pause if it's a synonym/antonym card and not the last word
                        if (card.classList.contains('synonym-card') && wordPartIndex < wordsToSpeak.length) {
                            setTimeout(speakNextPart, 300); // 300ms pause between related words
                        } else {
                            speakNextPart(); 
                        }
                    });
                };
                
                // Highlight the current card (if not already highlighted)
                if (!card.classList.contains('active-reading')) {
                    cards.forEach(c => c.classList.remove('active-reading'));
                    card.classList.add('active-reading');
                }

                // Start speaking the sequence of words/parts
                speakNextPart();
            };


            // --- Sequential Reading Logic for "Play All" ---
            const readNextWord = () => {
                if (!isReadingAll || wordIndex >= cards.length) {
                    isReadingAll = false;
                    wordIndex = 0; // Reset for next "read all"
                    cards.forEach(card => card.classList.remove('active-reading'));
                    return; // Stop the sequence
                }

                const currentCard = cards[wordIndex];
                
                // Highlight the current card
                cards.forEach(card => card.classList.remove('active-reading'));
                currentCard.classList.add('active-reading');

                // Scroll the active card into view
                currentCard.scrollIntoView({ behavior: 'smooth', block: 'center' });

                // Speak the word/words, and on completion, move to the next
                speakWordOrWords(currentCard, readingSpeed, () => {
                    wordIndex++;
                    readNextWord(); // Recursively call for the next word
                });
            };

            // --- Event Listeners ---

            // 1. Individual Card Click (Speak Button)
            speakBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation(); 
                    isReadingAll = false;
                    synth.cancel();
                    const card = e.currentTarget.closest('.word-card');
                    
                    speakWordOrWords(card, readingSpeed, null);
                });
            });

            // 2. Individual Card Click (Anywhere on the card, but not the button)
            cards.forEach(card => {
                card.addEventListener('click', (e) => {
                    if (!e.target.classList.contains('speak-btn')) {
                        isReadingAll = false;
                        synth.cancel();

                        speakWordOrWords(card, readingSpeed, null);
                    }
                });
            });

            // 3. Play All Button
            playAllBtn.addEventListener('click', () => {
                if (synth.speaking && isReadingAll) {
                    return;
                }
                
                isReadingAll = true;
                wordIndex = 0; 
                synth.cancel();
                readNextWord();
            });

            // 4. Stop Button
            stopBtn.addEventListener('click', () => {
                synth.cancel();
                isReadingAll = false;
                wordIndex = 0;
                cards.forEach(card => card.classList.remove('active-reading'));
            });

            // 5. Speed Control
            speedRange.addEventListener('input', (e) => {
                readingSpeed = parseFloat(e.target.value);
                speedValueSpan.textContent = readingSpeed.toFixed(1);
            });
        });
    </script>
</body>
</html>
